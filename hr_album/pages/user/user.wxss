.container {
    position: absolute;
    margin: 0;
    padding: 0;
    top: 0;
    left: 0;
    width: 100%;
}

.header {
    position: relative;
    height: 250rpx;
    width: 100%;
}

.system_tools {
    position: absolute;
    top: 45rpx;
    right: 30rpx;
    width: 50rpx;
    height: 50rpx;
}

.box {
    position: absolute;
    top: 130rpx;
    width: 700rpx;
    height: 230rpx;
    left: 28rpx;
    background-color: #FFFFFF;
    border-radius: 20rpx;
    box-shadow: 0px 0px 20rpx #ccc;
}

.avatar {
    position: absolute;
    top: -70rpx;
    left: 280rpx;
    width: 150rpx;
    height: 150rpx;
    box-shadow: 0px 0px 20rpx #ccc;
    border-radius: 100%;
}

.nickname {
    position: absolute;
    top: 85rpx;
    width: 100%;
    text-align: center;
    font-weight: bold;
}

.u_list {
    position: absolute;
    display: flex;
    top: 150rpx;
    height: 70rpx;
    color: #000;
    text-align: center;
}

.u_tico {
    width: 25rpx;
    height: 25rpx;
    margin-right: 10rpx;
}

.u_dico {
    width: 30rpx;
    height: 30rpx;
    margin-right: 5rpx;
}

.u_dtext {
    font-size: 20rpx;
}

.al_widths {
    width: 120rpx;
    overflow: hidden;
    height: 30rpx;
}

.u_icos {
    width: 50rpx;
    height: 50rpx;
    margin-right: 5rpx;
}

.u_list .u_items {
    display: flex;
    min-width: 350rpx;
    height: 70rpx;
    overflow: hidden;
    justify-content: center;
    -webkit-align-items: center;
}

.u_after {
    content: '';
    height: 50rpx;
    width: 3rpx;
    margin-top: 10rpx;
    background-color: #ccc;
    justify-content: center;
    -webkit-align-items: center;
}

.u_text1 {
    font-size: 25rpx;
    line-height: 60rpx;
    letter-spacing: 2rpx;
}

.u_text2 {
    letter-spacing: 2rpx;
    margin-left: 20rpx;
    font-size: 40rpx;
    line-height: 60rpx;
    color: #FD5A87;
}

.cards {
    margin-top: 150rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
}

.al_box {
    position: relative;
    width: 680rpx;
    height: 200rpx;
    padding: 10rpx;
    display: flex;
    flex-direction: row;
    background-color: #FFFFFF;
    margin-bottom: 20rpx;
    border-radius: 20rpx;
    box-shadow: 0px 0px 20rpx #ccc;
}

.al_img {
    width: 200rpx;
    height: 200rpx;
    border-radius: 20rpx;
    margin-right: 20rpx;
}

.al_info {
    display: flex;
    flex-direction: column;
}

.al_title {
    margin-top: 10rpx;
    font-size: 30rpx;
    font-weight: bold;
    width: 400rpx;
    height: 40rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}

.al_addtime {
    margin-top: 20rpx;
    margin-bottom: 5rpx;
    display: flex;
    flex-direction: row;
}

.al_times {
    font-size: 22rpx;
    color: #9a9a9a;
}

.al_desc {
    font-size: 22rpx;
    color: #9a9a9a;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: flex-start;
}

.al_btns {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: flex-start;
    margin-top: 20rpx;
}

.al_btn {
    width: 120rpx;
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
    font-size: 25rpx;
    letter-spacing: 2rpx;
    background-color: #ebebeb;
    margin-right: 20rpx;
    border-radius: 10rpx;
}

.user_del {
    position: absolute;
    top: 15rpx;
    right: 15rpx;
    width: 40rpx;
    height: 40rpx;
    z-index: 2;
}

.al_btn.edit {
    background-color: #01B4FF;
    color: #FFFFFF;
    box-shadow: 0 0 10rpx #ccc;
}

.al_btn.shares {
    background-color: #DD5044;
    color: #FFFFFF;
    box-shadow: 0 0 10rpx #ccc;
}

.al_btn.del {
    box-shadow: 0 0 10rpx #ccc;
}

.al_btn.fabiao {
    background-color: #DD5044;
    color: #FFFFFF;
    box-shadow: 0 0 10rpx #ccc;
}

.pay {
    position: absolute;
    top: 20rpx;
    left: 20rpx;
}

.mtbtns {
    position: absolute;
    top: 20rpx;
    right: 20rpx;
    width: 120rpx;
    height: 50rpx;
    line-height: 50rpx;
    font-size: 22rpx;
    background-color: #DD5044;
    color: #FFFFFF;
    text-align: center;
    border-radius: 10rpx;
    letter-spacing: 2rpx;
    box-shadow: 0 0 10rpx #ccc;
}

.m_image {
    width: 100%;
    height: 100%;
}

.more_btn {
    position: fixed;
    bottom: 20rpx;
    right: 10rpx;
    width: 100rpx;
    height: 100rpx;
    z-index: 5;
}

.kfbtn {
    position: fixed;
    bottom: 140rpx;
    width: 100rpx;
    height: 100rpx;
    right: 10rpx;
    z-index: 6;
}

.kfimg {
    width: 100%;
    height: 100%;
}

.llads {
    position: relative;
    width: 95%;
    height: 150rpx;
    margin: 0 auto;
    margin-top: 10rpx;
    margin-bottom: 20rpx;
}