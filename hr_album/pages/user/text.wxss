.desc {
    padding: 30rpx;
    color: #8a8a8a;
    letter-spacing: 5rpx;
}

.titbox {
    position: relative;
    display: block;
    width: 100%;
    height: 150rpx;
    overflow: hidden;
}

.titletxt {
    width: 100%;
    padding: 30rpx;
    overflow: hidden;
    background-color: #FFF;
    color: #8a8a8a;
}

.tfooter {
    position: fixed;
    bottom: 0;
    left: 0;
    display: flex;
    width: 100%;
    height: 80rpx;
    padding-top: 20rpx;
    padding-bottom: 20rpx;
    background-color: #f2f2f2;
    z-index: 999;
}

.tfooter .tfBtn {
    width: 40%;
    height: 70rpx;
    text-align: center;
    border-radius: 10rpx;
    border: 1px solid #6B6B6B;
    margin-left: 6%;
    line-height: 70rpx;
    font-size: 32rpx;
    color: #6B6B6B;
    letter-spacing: 10rpx;
    background-color: #FFFFFF;
}

.tfooter .tcloseBtn {
    color: #FF4E6E;
    border: 1px solid #FF4E6E;
}

.list {
    position: relative;
    background-color: #FFF;
    padding: 10rpx 20rpx 20rpx 20rpx;
    margin-bottom: 120rpx;
    z-index: 5;
}

.item {
    position: relative;
    display: flex;
    flex-direction: row;
    margin-top: 20rpx;
    width: 100%;
    height: 220rpx;
}

.item:after {
    position: absolute;
    right: 0;
    bottom: 0;
    left: 0;
    height: 0.5rpx;
    content: '';
    transform: scaleY(.5);
    background-color: #c8c7cc;
}

.item .thumb image {
    width: 200rpx;
    height: 200rpx;
}

.text {
    z-index: 5;
    width: 100%;
}

.picTxt {
    padding: 30rpx;
    width: 90%;
    height: 90rpx;
    font-size: 28rpx;
    color: #6B6B6B;
    z-index: 2;
}

.dopic {
    display: flex;
    justify-content: flex-end;
}

.dopic image {
    width: 50rpx;
    height: 50rpx;
    padding-right: 10rpx;
}