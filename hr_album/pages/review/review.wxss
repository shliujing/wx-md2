.pagebox {
    display: flex;
    flex-direction: column;
    justify-content: center;
    margin-bottom: 180rpx;
}

.box {
    position: relative;
    display: flex;
    flex-direction: row;
    justify-content: center;
    padding: 15rpx;
}

.box .avatar {
    width: 80rpx;
    height: 80rpx;
    border-radius: 100%;
}

.box .boxes {
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: center;
    margin-left: 30rpx;
    padding-bottom: 10rpx;
    width: 600rpx;
    overflow: hidden;
}

.boxes:after {
    content: ' ';
    border-top: 1rpx solid #bfbfbf;
    height: 1px;
    width: 100%;
    position: absolute;
    bottom: 0;
    left: 0;
    transform: scaleY(0.5);
}

.box .nickname {
    font-size: 30rpx;
    font-weight: bold;
}

.box .times {
    font-size: 20rpx;
    color: #9a9a9a;
    margin-bottom: 15rpx;
    margin-top: 15rpx;
}

.box .content {
    width: 100%;
    color: #5B5B5B;
    font-size: 28rpx;
}

.rbox {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 80rpx;
    display: flex;
    flex-direction: row;
    padding: 20rpx;
    background-color: #FFF;
}

.rbox:before {
    content: ' ';
    border-top: 1rpx solid #bfbfbf;
    height: 1px;
    width: 100%;
    position: absolute;
    top: 0;
    left: 0;
    transform: scaleY(0.5);
}

.userimg {
    width: 80rpx;
    height: 80rpx;
    border-radius: 100%;
}

.inputbox {
    margin-left: 20rpx;
    width: 500rpx;
    height: 60rpx;
    margin-top: 15rpx;
    border: none;
    margin-right: 20rpx;
}

.gang {
    content: ' ';
    width: 1px;
    height: 50rpx;
    margin-top: 20rpx;
    background-color: #BABABA;
    margin-right: 20rpx;
}

.doreview {
    color: #EE2C2C;
    font-size: 35rpx;
    line-height: 80rpx;
}

.delbox {
    width: 100rpx;
    height: 50rpx;
    font-size: 25rpx;
    border: 1px solid #EE2C2C;
    color: #EE2C2C;
    text-align: center;
    line-height: 50rpx;
    border-radius: 20rpx;
}